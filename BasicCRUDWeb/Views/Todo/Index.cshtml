@model IEnumerable<Todo>

@{
    ViewData["Title"] = "Index";
}

<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">To Do List <small class="text-muted">สิ่งที่จะทำในชีวิต</small></h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Todo" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i>&nbsp; Create
        </a>
    </div>
</div>
<br />
<table id="myTable" class="table table-striped table-hover" style="width:100%">
    <thead>
        <tr>
            <th width="80%">
                List
            </th>
            <th>
                Priority
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="80%">
                    @obj.Dolist
                </td>
                <td width="10%" >

                    <script type="text/javascript">
                        switch (@obj.Priority) 
                        {
                            case 0:
                                document.write("<p class='text-success'>Low</p>");
                                break;
                            case 1:
                                document.write("<p class='text-warning'>Medium</p>");
                                break;
                            case 2:
                                document.write("<p class='text-danger'>High</p>");
                                break;
                            default:
                                document.write("-");
                        }
                    </Script>
                </td>
                <td>
                    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                        <a asp-controller="Todo" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-warning btn-sm">
                            <i class="bi bi-pencil-square"></i></a>
                            <Button id="myform" type="button" class="btn btn-outline-danger btn-sm" onclick="setTextModal('@obj.Dolist', @obj.Id, @obj.Priority)" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                <i class="bi bi-trash-fill"></i>
                            </Button>
                            @*<input name="id" value="@obj.Id" hidden />*@
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Confirm Delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p style="display:inline">&nbsp; &nbsp; &nbsp; &nbsp;</p>
        <p id="text" style="display:inline"></p> <br><br>
        <p id="a" style="display:inline">Priority : </p>
        <p id="prio" style="display:inline"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">CLOSE</button>
        <form method="post" asp-action="DeletePOST">
            <button id="submitdel" name="id" value="" type="submit" class="btn btn-outline-danger">DELETE</button>
        </form>
      </div>
    </div>
  </div>
</div>


<script>
	function setTextModal(text, id, prio){
        document.getElementById("submitdel").value = id;
        document.getElementById("text").innerHTML = text;

        var prioText = "-";
        var prioClassName = "";
        switch (prio) 
        {
            case 0:
                prioText = "Low";
                prioClassName = "text-success"
                break;
            case 1:
                prioText = "Medium";
                prioClassName = "text-warning"
                break;
            case 2:
                prioText = "High";
                prioClassName = "text-danger"
                break;
            default:
                prioText = "-";
        }
        document.getElementById("prio").innerHTML = prioText;
        document.getElementById("prio").className = prioClassName;
    }
</script>


  


